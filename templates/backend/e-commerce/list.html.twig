                        <tr>
                            <!--begin::Checkbox-->
                            <td>
                                <div class="form-check form-check-sm form-check-custom form-check-solid">
                                    <input class="form-check-input" type="checkbox" value="{{product.id}}" />
                                </div>
                            </td>
                            <!--end::Checkbox-->
                            <!--begin::Category=-->
                            <td>
                                <div class="d-flex align-items-center">
                                    <!--begin::Thumbnail-->
                                    <a href="{{path('products.news', {sku: product.sku})}}" class="symbol symbol-50px">
                                        <span class="symbol-label" style="background-image:url({{product.cover.tempFile|default('blank-image.svg')}});"></span>
                                    </a>
                                    <!--end::Thumbnail-->
                                    <div class="ms-5">
                                        <!--begin::Title-->
                                        <a href="{{path('products.news', {sku: product.sku})}}" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-ecommerce-product-filter="product_name">{{product.nom}}</a>
                                        <!--end::Title-->
                                    </div>
                                </div>
                            </td>
                            <!--end::Category=-->
                            <!--begin::SKU=-->
                            <td class="text-end pe-0">
                                <span class="fw-bold">{{product.sku}}</span>
                            </td>
                            <!--end::SKU=-->
                            <!--begin::Qty=-->
                            <td class="text-end pe-0" data-order="{{product.quantite}}">
                                {% if product.quantite <= 5 %}
                                    <span class="badge badge-light-warning">Faible stock</span>
                                    <span class="fw-bold text-warning ms-3">{{product.quantite}}</span>
                                {% elseif product.quantite == 0 %}
                                    <span class="badge badge-light-danger">Tous vendus</span>
                                    <span class="fw-bold text-danger ms-3">{{product.quantite}}</span>
                                {% else %}
                                    <span class="fw-bold ms-3">{{product.quantite}}</span>
                                {% endif %}
                            </td>
                            <!--end::Qty=-->
                            <!--begin::Price=-->
                            <td class="text-end pe-0">
                                <span class="fw-bold text-dark">{{product.points}}</span>
                            </td>
