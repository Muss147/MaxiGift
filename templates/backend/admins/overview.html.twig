<script type="text/javascript">

function checkEmail() {
    var email = $('#kt_signin_change_email input[name=email]').val();
    let url = "{{ path('admins.checkEmail') }}";
    $.ajax({
        url: url,
        type: "post",
        dataType: 'json',
        async: true,
        data: {
            'email': email
        }
    })
    .done(function(data){
        if (data) {
            $('.fv-plugins-message-container.email_msg').html('<div data-field="email" data-validator="emailAddress">Cet Email existe déjà, veuillez en choissir un autre.</div>');
            $('#kt_signin_submit').addClass('disabled');
        }
        else {
            $('.fv-plugins-message-container.email_msg').html('');
            $('#kt_signin_submit').removeClass('disabled');
        }
    });
}
function checkPswd(event) {
    var pswd = $(event).val();
    console.log(pswd);
    let url = "{{ path('admins.checkPswd') }}";
    $.ajax({
        url: url,
        type: "post",
        dataType: 'json',
        async: true,
        data: {
            'id': "{{admin.id}}",
            'pswd': pswd,
        }
    })
    .done(function(data){
        console.log(data);
        if (!data) {
            $(event).next().html('<div data-field="email" data-validator="emailAddress">Le Mot de Passe est incorrect, veuillez y saisir le bon.</div>');
            $(event).parent().parent().parent().next().find('button.btn-primary').addClass('disabled');
        }
        else {
            $(event).next().html('');
            $(event).parent().parent().parent().next().find('button.btn-primary').removeClass('disabled');
        }
    });
}
