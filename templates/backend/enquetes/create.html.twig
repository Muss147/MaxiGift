function generateRedirection(event) {
    var value = event.val();
    var redirections = '<option></option>';
    {% for question in enquete.questions %}
        if (value == "{{question.id}}") {
            var reponses = '<option></option>';
            {% for reponse in question.reponses %}reponses += '<option value="{{reponse.id}}">{{reponse.libelle}}</option>';{% endfor %}
            event.parent().next().find('select').html(reponses);

            redirections += '<option value="{{question.id}}" disabled>{{question.libelle}}</option>';
        }
        else redirections += '<option value="{{question.id}}">{{question.libelle}}</option>';
    {% endfor %}
    event.parent().next().next().find('select').html(redirections);
}

