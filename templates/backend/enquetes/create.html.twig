                                    <!--begin::Preview existing avatar-->
                                    <div class="image-input-wrapper w-100 h-125px" style="background-image: url({{asset('uploads/images/'~ enquete.cover.tempFile|default('blank-image.svg'))}}); background-size: contain; background-position: center; background-repeat: no-repeat;"></div>
