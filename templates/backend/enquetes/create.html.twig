{% extends "backend/layout.html.twig" %}

{% block title %}Détails Enquête{% endblock %}
{% block description %}{% endblock %}

{% block stylesheets %}
<!--begin::Page Vendor Stylesheets(used by this page)-->
<link href="{{asset('assets/plugins/custom/prismjs/prismjs.bundle.css')}}" rel="stylesheet" type="text/css" />
<!--end::Page Vendor Stylesheets-->

<style type="text/css">
input, textarea {
    outline: none;
}
.modal-body textarea[name=description], .modal-body textarea[name=description]::placeholder {
   font-size: 18px;
   opacity: .7;
}
.modal-body textarea[name=description]::placeholder { 
   font-style: italic;
}
.modal-body input[name=libelle] {
   font-size: 23px
}
.modal-body input[name=libelle]::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */ 
   font-style: italic;
   font-size: 23px
}

/* PREVIEW CSS */
.questshow-container {
    max-width: 1000px;
    margin: auto;
}
.myQuests {
    display: none;
}
.myQuests.fader {
    animation-name: fader;
    animation-duration: 1.5s;
}
@keyframes fader {
    from {opacity: .4}
    to {opacity: 1}
}
</style>
{% endblock %}

{% block pageTitle %}
<div class="page-title d-flex flex-column align-items-start justify-content-center flex-wrap me-lg-2 pb-2 pb-lg-0" data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', lg: '#kt_header_container'}">
    <!--begin::Heading-->
    <h1 class="text-dark fw-bolder my-1 fs-2">Détails Enquête 
    <small class="text-muted fs-6 fw-normal ms-1"></small></h1>
    <!--end::Heading-->
    <!--begin::Breadcrumb-->
    <ul class="breadcrumb fw-bold fs-base my-1">
        <li class="breadcrumb-item text-muted">
            <a href="{{path('dash')}}" class="text-muted">Dashboards</a>
        </li>
        <li class="breadcrumb-item text-muted">Enquêtes</li>
        <li class="breadcrumb-item text-muted">
            <a href="{{path('enquetes.list')}}" class="text-muted">Liste des Enquêtes</a>
        </li>
        <li class="breadcrumb-item text-dark">Détails Enquête</li>
    </ul>
    <!--end::Breadcrumb-->
</div>
{% endblock %}

{% block body %}<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Container-->
    <div class="container-xxl" id="kt_content_container">
        <!--begin::Form-->
        <form id="kt_enquete_edit_form" class="form d-flex flex-column flex-lg-row" action="" method="POST" enctype="multipart/form-data">
