                                <input type="hidden" name="publish" value="{{enquete.status}}" disabled/>
                                <!--end::Select2-->
                                <!--begin::Description-->
                                <div class="text-muted fs-7">Le nom de l'Enquête doit être unique.</div>
                                <!--end::Description-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="fv-row">
                                <!--begin::Label-->
                                <label class="required form-label">Points</label>
                                <!--end::Label-->
                                <!--begin::Select2-->
                                <input type="number" class="form-control form-control-solid" name="points" placeholder="" value="{{enquete.points}}"/>
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="fv-row">
                                <!--begin::Label-->
                                <label class="required form-label">Description</label>
                                <!--end::Label-->
                                <!--begin::Editor-->
                                <textarea id="" rows="5" name="description" placeholder="Message à afficher..." class="form-control mb-2">{{enquete.description}}</textarea>
                                <!--end::Editor-->
                            </div>
                            <!--end::Input group-->
                        </div>
                    </div>
                    <!--end::Card header-->
                </div>
                <!--end::Order details-->
            </div>
            <!--end::Aside column-->
            <!--begin::Main column-->
            <div class="d-flex flex-column flex-lg-row-fluid gap-7 gap-lg-10">
                <!--begin::Order details-->
                <div class="card card-flush py-4 stepper stepper-pills" id="kt_stepper_example_clickable">
                    <!--begin::Card header-->
                    <div class="card-header stepper-nav flex-center flex-wrap mb-10">
                        <!--begin::Step 1-->
                        <div class="stepper-item mx-2 my-4 current" data-kt-stepper-element="nav" data-kt-stepper-action="step">
                            <!--begin::Line-->
                            <div class="stepper-line w-40px"></div>
                            <!--end::Line-->

                            <!--begin::Icon-->
                            <div class="stepper-icon w-40px h-40px">
                                <i class="stepper-check fas fa-check"></i>
                                <span class="stepper-number">1</span>
                            </div>
                            <!--end::Icon-->

                            <!--begin::Label-->
                            <div class="stepper-label">
                                <h3 class="stepper-title">
                                    Questions
                                </h3>

                                <div class="stepper-desc">
                                    Les questions de l'Enquête
                                </div>
                            </div>
                            <!--end::Label-->
                        </div>
                        <!--end::Step 1-->

                        <!--begin::Step 2-->
                        <div class="stepper-item mx-2 my-4" data-kt-stepper-element="nav" data-kt-stepper-action="step">
                            <!--begin::Line-->
                            <div class="stepper-line w-40px"></div>
                            <!--end::Line-->

                            <!--begin::Icon-->
                            <div class="stepper-icon w-40px h-40px">
                                <i class="stepper-check fas fa-check"></i>
                                <span class="stepper-number">2</span>
                            </div>
                            <!--begin::Icon-->

                            <!--begin::Label-->
                            <div class="stepper-label">
                                <h3 class="stepper-title">
                                    Conditions
                                </h3>

                                <div class="stepper-desc">
                                    Conditions aux questions
                                </div>
                            </div>
                            <!--end::Label-->
                        </div>
                        <!--end::Step 2-->

                        <!--begin::Step 3-->
                        <div class="stepper-item mx-2 my-4" data-kt-stepper-element="nav" data-kt-stepper-action="step">
                            <!--begin::Line-->
                            <div class="stepper-line w-40px"></div>
                            <!--end::Line-->

                            <!--begin::Icon-->
                            <div class="stepper-icon w-40px h-40px">
                                <i class="stepper-check fas fa-check"></i>
                                <span class="stepper-number">3</span>
                            </div>
                            <!--begin::Icon-->

                            <!--begin::Label-->
                            <div class="stepper-label">
                                <h3 class="stepper-title">
                                    Prévisualisation
                                </h3>

                                <div class="stepper-desc">
                                    Aperçu de l'enquête
                                </div>
                            </div>
                            <!--end::Label-->
                        </div>
                        <!--end::Step 3-->

                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body pt-0">
                        <div class="d-flex flex-column gap-10">
                            <!--begin::Group-->
                            <div class="mb-5">
                                <!--begin::Step 1-->
                                <div class="flex-column current" data-kt-stepper-element="content">
                                    <div class="row g-10 draggable-zone hover-scroll mh-500px">
                                        {% for question in enquete.questions|sort((a, b) => a.numero <=> b.numero) %}
                                        <div class="draggable" data-type="{{question.type}}">
                                            <!--begin::Card-->
                                            <div class="card card-bordered">
                                                <div class="card-header bg-light">
                                                    <div class="card-title">
                                                        <h3 class="card-label cursor-pointer" data-bs-toggle="modal" data-bs-target="#kt_modal_update_question" onclick="editQuestion({{question.id}})">{{question.numero}} - {{question.libelle}} {% if question.required %}<sup>(*)</sup>{% endif %}</h3>
                                                        <input type="hidden" name="questions[]" value="{{question.id}}">
                                                    </div>
                                                    <div class="card-toolbar">
                                                        <a href="#" class="btn btn-icon btn-sm btn-hover-light-primary draggable-handle">
                                                            <!--begin::Svg Icon | path: icons/duotune/abstract/abs015.svg-->
                                                            <span class="svg-icon svg-icon-2x">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                                    <path d="M21 7H3C2.4 7 2 6.6 2 6V4C2 3.4 2.4 3 3 3H21C21.6 3 22 3.4 22 4V6C22 6.6 21.6 7 21 7Z" fill="currentColor"></path>
